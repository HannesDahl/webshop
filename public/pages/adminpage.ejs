<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); -%>
    <link rel="stylesheet" href="../css/adminpage.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <title>Adminpage</title>
</head>

<body>

    <%- include('../partials/adminsidenav'); -%>

    <div class="container">
        <table id="products-table" class="products-table centered hover row-border">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                    <th>Edit product</th>
                </tr>
            </thead>
            <tbody id="products-insert-point">
                <%- include('../components/table-row'); -%>
            </tbody>
        </table>
    </div>

    <div id="productEditModal" class="modal modal-fixed-footer">
        <form action="/save-changes" method="POST">
            <div class="modal-content">
                <h4>Edit product</h4>
                <div class="row">
                    <div class="input-field col s2">
                        <input id="productID" name="productID" class="validate" type="number" readonly>
                        <label for="productID">ID</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="productName" name="productName" class="validate" type="text">
                        <label class="active" for="productName">Name</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="productPrice" name="productPrice" class="validate" type="number">
                        <label class="active" for="productPrice">Price</label>
                    </div>
                    <div class="input-field col s12">
                        <input id="productDescription" name="productDescription" class="validate" type="text">
                        <label class="active" for="productDescription">Description</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="/close-modal" class="modal-close waves-effect btn-flat">close</a>
                <button class="waves-effect btn-flat">save</button>
            </div>
        </form>
    </div>

    <div class="loader-wrapper">
        <div class="preloader-wrapper big active">
            <div class="spinner-layer spinner-blue-only">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>
                <div class="gap-patch">
                    <div class="circle"></div>
                </div>
                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts'); -%>
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    </script>
    <script src="../js/admin.js"></script>

</body>

</html>