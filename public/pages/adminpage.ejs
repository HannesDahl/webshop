<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../css/adminpage.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <title>Adminpage</title>
</head>

<body>

    <ul class="side-nav">
        <li><a class="header" href="/">Home</a></li>
        <li><a class="active" href="/adminpage">Product list</a></li>
        <li><a href="#">Dashboard</a></li>
        <li><a href="/adminpage/addproduct">Add product</a></li>
    </ul>

    <div class="container">
        <table id="products-table" class="products-table hover row-border stripe" style="width:80%">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                </tr>
            </thead>
            <tbody id="products-insert-point">
                <%- include('../components/table-row'); -%>
            </tbody>
        </table>
    </div>

    <div class="loader-wrapper">
        <div class="loader"></div>
    </div>

    <%- include('../partials/scripts'); -%>
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    </script>
    <script>
        $(document).ready(function () {
            $('#products-table').DataTable();
        });

        $(window).on("load", function () {
            $('.loader-wrapper').fadeOut("slow");
        });
    </script>

</body>

</html>