<% for(let i = 0; i < products.length; i++) { %>
<tr>
    <td>
        <i class="material-icons item-remove-button">close</i>
    </td>
    <td>
        <img src="images/<%=products[i].image%>">
    </td>
    <td class="product-name">
        <a href="/p/<%=products[i].name%>">
            <%=products[i].name%>
        </a>
    </td>
    <td><%=products[i].price%>€</td>
    <td>
        <input type="number" min="0" max="99" value="1">
    </td>
    <td class="cart-product-price"><%=products[i].price%>€</td>
</tr>
<% } %>